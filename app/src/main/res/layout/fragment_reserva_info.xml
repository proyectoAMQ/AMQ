<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.vistas.ReservaInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Alojamiento:" />
        <TextView
            android:id="@+id/reserva_aloj_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción alojamiento:" />
        <TextView
            android:id="@+id/reserva_aloj_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciudad:" />
        <TextView
            android:id="@+id/reserva_aloj_ciudad_pais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccion:" />
        <TextView
            android:id="@+id/reserva_aloj_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nro. de reserva:" />
        <TextView
            android:id="@+id/reserva_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado reserva:" />
        <TextView
            android:id="@+id/reserva_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/reserva_layout_calif">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calificación Húesped:" />
            <TextView
                android:id="@+id/reserva_calif_hu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calificación anfitrión:" />
            <EditText
                android:inputType="number"
                android:enabled="false"
                android:id="@+id/reserva_calif_anf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reseña alojamiento:" />
            <EditText
                android:enabled="false"
                android:id="@+id/reserva_aloj_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/reserva_btncalificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calificar"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/reserva_layout_cancelar">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar reserva"
            android:id="@+id/reserva_btnCancelar"/>

    </LinearLayout>

    </LinearLayout>
</FrameLayout>