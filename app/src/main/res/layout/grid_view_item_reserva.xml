<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reservas_click_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        android:clickable="true">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView10"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:text="Alojamiento:" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text="ESTADO:" />

        <TextView
            android:id="@+id/item_reserva_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/textView10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_reserva_nombreAloj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_reserva_estado"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/textView13"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_reserva_fInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_reserva_nombreAloj"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/textView11" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_reserva_nombreAloj"
            android:layout_marginTop="5dp"
            android:text="Fecha inicio:" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView11"
            android:layout_marginTop="5dp"
            android:text="Fecha Fin:" />


        <TextView
            android:id="@+id/item_reserva_fFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_reserva_fInicio"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/textView12" />

        <TextView
            android:id="@+id/item_reserva_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>